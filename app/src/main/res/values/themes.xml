<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavTextStyle">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="CollapsingTitleStyle">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="GilroyBoldTextStyle">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CurvedTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="text_color">@color/charade</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">@dimen/_14sdp</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/progressbar_bg</item>
    </style>

    <style name="GilroyLightTextStyle">
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Style.AppBarLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--         Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00f</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="RemoveAlertDialog" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/_10sdp</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/alert_dialog_bg</item>
    </style>

    <style name="RoundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeableImageViewRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@color/orange_a200</item>
    </style>

    <style name="ClickableImageView">
        <item name="colorControlHighlight">@color/orange_a200</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardBackgroundColor">@color/charade</item>
        <item name="cardCornerRadius">@dimen/_18sdp</item>
        <item name="strokeColor">@color/main_grey</item>
        <item name="strokeWidth">@dimen/_2sdp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomSheetDialog_Rounded">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <declare-styleable name="CurvedTextStyle">
        <attr name="radius" format="dimension" />
        <attr name="center_angle" format="integer" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="font_family" format="reference" />
        <attr name="text" format="string" />
    </declare-styleable>

    <style name="FABStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/charade</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>
</resources>